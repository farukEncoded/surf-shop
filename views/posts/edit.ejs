<% layout('layouts/boilerplate') -%>

<h1>Edit Post!</h1>
<form action="/posts/<%= post.id %>?_method=PUT" enctype="multipart/form-data" method="post" id="postEditForm">
    <div>
        <input type="text" name="post[title]" placeholder="Title" value="<%= post.title %>" id="">
    </div>
    <div>
        <input type="text" name="post[price]" placeholder="Price" value="<%= post.price %>" id="">
    </div>
    <div>
        <input type="file" name="images" accept="images/*" multiple id="imageUpload">
        <div>
            <% post.images.forEach((image,i)=>{%>
                <img src="<%=image.url%>" width="100px" height="100px">
                <label for="image<%=i%>">Delete?</label>
                <input type="checkbox" class="imageDeleteCheckbox" name="deleteImages[]" id="image<%=i%>" value="<%=image.public_id%>">
                
            <%})%>
        </div>
    </div>
    <div>
        <textarea name="post[description]" placeholder="Description" ><%= post.description %></textarea>
    </div>
    <div>
        <input type="text" name="post[location]" placeholder="Location" value="<%= post.location %>" id="">
    </div>
    
    <input type="submit" name="" id="">
</form>

<script src="/javascripts/post-edit.js"></script>